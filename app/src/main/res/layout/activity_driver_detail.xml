<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffebebeb"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <include layout="@layout/commom_back_btn"/>

        <TextView
            style="@style/title_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="车主资料"
            android:textColor="@color/text_green"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20.0dip">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="115.0dip"
                    android:padding="5dp"
                    android:background="@color/backgroud_color"
                    android:orientation="horizontal">

                    <eo.cn.yxwuliu.ui.RoundImageView
                        android:id="@+id/userImg"
                        android:layout_width="50.0dip"
                        android:layout_height="50.0dip"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_avatar"
                        imagecontrol:border_inside_color="#ffa5d9fd"
                        imagecontrol:border_thickness="3.0dip"/>

                    <LinearLayout
                        android:id="@+id/personInfo_view"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20.0dip"
                        android:layout_toRightOf="@id/userImg"
                        android:orientation="vertical"
                        android:paddingRight="10.0dip">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_identity_show"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6.0dip"
                                android:ellipsize="end"
                                android:text="身份"
                                android:textSize="13.0sp"/>


                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:textSize="13.0sp"
                                android:text="姓名"/>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15.0dip"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/answerTheSingular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="接单数"
                                android:textSize="13.0sp"/>

                            <TextView
                                android:id="@+id/deliverNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15.0dip"
                                android:layout_toRightOf="@id/answerTheSingular"
                                android:text="发车数"
                                android:textSize="13.0sp"/>

                            <TextView
                                android:id="@+id/tv_register_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="30.0dip"
                                android:layout_toRightOf="@id/deliverNumber"
                                android:text="注册时间"
                                android:textSize="13.0sp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/backgroud_color"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:background="#ffffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userStar_show"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:gravity="center"
                        android:text="认证情况"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:background="@color/backgroud_color"
                        android:visibility="gone"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="10.0dip"
                    android:paddingLeft="25.0dip"
                    android:paddingTop="10.0dip">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_shiming_rz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15.0dip"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_shiming_rz"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="实名认证"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8.0dip"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_shiming_show"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/gray"
                                    android:textSize="13.0sp"
                                    android:text="身份证已认证"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="15.0dip"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_zizhi_rz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15.0dip"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_zizhi_rz"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="资质认证"/>

                            <TextView
                                android:id="@+id/tv_zizhi_show"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8.0dip"
                                android:textColor="@color/gray"
                                android:textSize="13.0sp"
                                android:text="驾驶证等未认证"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:background="#ffffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15.0dip"
                        android:gravity="center"
                        android:text="联系方式"/>

                    <TextView
                        android:id="@+id/driver_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10.0dip"
                        android:gravity="center"
                        android:text="仅好友可见"/>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/backgroud_color"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:background="#ffffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15.0dip"
                        android:gravity="center"
                        android:text="位置："/>

                    <TextView
                        android:id="@+id/driver_address"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10.0dip"
                        android:gravity="center"
                        android:text="仅好友可见"/>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/backgroud_color"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@color/backgroud_color"
            android:orientation="horizontal">

            <Button
                android:id="@+id/JoinTheBlacklist"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@color/white"
                android:gravity="center"
                android:text="黑名单"
                android:textSize="15.0sp"/>

            <Button
                android:id="@+id/addFriends"
                style="@style/button_text_style"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1.0dip"
                android:layout_weight="1.0"
                android:background="@color/white"
                android:gravity="center"
                android:text="加好友"
                android:textColor="@color/turn_color"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>