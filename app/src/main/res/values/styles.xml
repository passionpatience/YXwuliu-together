<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TitleBarFont">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
    <style name="TitleBarTitleFont">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="title_text_style">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/person_title_bar_bg</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="button_text_style">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">35.0dip</item>
        <item name="android:minHeight">25.0dip</item>
    </style>

</resources>
